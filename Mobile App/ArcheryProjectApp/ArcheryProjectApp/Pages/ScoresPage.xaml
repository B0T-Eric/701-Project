<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArcheryProjectApp.Pages.ScoresPage"
             Title="ScoresPage">
    <VerticalStackLayout>

        <HorizontalStackLayout>
        <Label Text="Ends                                          " FontSize="10" Padding="4" />
        <Label Text="Arrows                             " FontSize="10" Padding="4"/>
        <Label Text="X's            " FontSize="10" Padding="4"/>
        <VerticalStackLayout >
            <Label Text="End " FontSize="10"/>
            <Label Text="Total        " FontSize="10"/>
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Running " FontSize="10"/>
            <Label Text="Total" FontSize="10"/>
        </VerticalStackLayout>

        </HorizontalStackLayout>

        <ScrollView>
        <VerticalStackLayout x:Name="RoundScoringLayout" >
        </VerticalStackLayout>
    </ScrollView>
    </VerticalStackLayout>
</ContentPage>