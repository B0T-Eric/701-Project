<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup  xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArcheryProjectApp.Pages.ScoreCardPopup"
             >
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Button x:Name="NextRoundButton"  Text="Next Round" Clicked="OnNextRoundClicked"/>
            <Label x:Name="CurrentRoundLabel" Text="Round:"/>
            <Button x:Name="PreviousRoundButton" Text="Previous Round" Clicked="OnPreviousRoundClicked"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <StackLayout>
                <Label Text="Select Round Type"/>
                <RadioButton x:Name="FlintRadioButton" Content="Flint"/>
                <RadioButton x:Name="StandardRadioButton" Content="Standard"/>
            </StackLayout>
            <StackLayout>
                <!--What is this called?-->
                <Label Text="Select Distance Type?"/>
                <RadioButton x:Name="StationaryRadioButton"  Content="Stationary"/>
                <RadioButton x:Name="WalkUpRadioButton" Content="Walk-Up"/>
                <RadioButton x:Name="WalkBackRadioButton" Content="Walk-Back"/>
            </StackLayout>
        </HorizontalStackLayout>
        <Label Text="Same Target For All Ends?" />
        <CheckBox x:Name="SameTargetCheckBox"/>
        <ListView x:Name="Targets"
            ItemsSource="{Binding TargetItems}"/>
        
    </VerticalStackLayout>
</toolkit:Popup>