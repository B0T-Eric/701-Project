<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArcheryProjectApp.ProfilePage"
             Title="Profile">
    <VerticalStackLayout>
        <HorizontalStackLayout Padding="6">
            <Image WidthRequest="200" HeightRequest="200" Source="pfp.png"/>
            <VerticalStackLayout>
                <Label Text="Name: "
                       FontSize="16"
                       Padding="8"/>
                <Label Text="NZFAA: "
                       FontSize="16"
                       Padding="8"/>
                <Label Text="Club: "
                       FontSize="16"
                       Padding="8"/>
                <Button Text="Edit Profile" Margin="8"/>
            </VerticalStackLayout>
        </HorizontalStackLayout>
        <Label
            Text="Upcomming Events"
            FontSize="20"
            FontAttributes="Bold"/>
        <ListView/>
        
    </VerticalStackLayout>
</ContentPage>